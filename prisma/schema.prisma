generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Plant {
  id        Int        @id @default(autoincrement())
  name      String
  inverters Inverter[]
}

model Inverter {
  id        Int       @id @default(autoincrement())
  plantId   Int
  plant     Plant     @relation(fields: [plantId], references: [id])
  metrics   Metric[]
}

model Metric {
  id          Int      @id @default(autoincrement())
  inverterId  Int
  inverter    Inverter @relation(fields: [inverterId], references: [id])
  timestamp   DateTime
  power       Float
  temperature Float
}
